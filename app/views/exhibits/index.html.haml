%h2 みんなの出品物一覧
%p ようこそ apuri へ！

%ul.tabs(data-tab)
  %li.tab-title.active
    = link_to 'LT', '#lts'
  %li.tab-title
    = link_to '食べ物', '#foods'
  %li.tab-title
    = link_to 'お酒', '#sakes'

.tabs-content
  .content.active#lts
    = render partial: 'exhibits_table', locals: {exhibits: @lts}

  .content#foods
    = render partial: 'exhibits_table', locals: {exhibits: @foods}

  .content#sakes
    = render partial: 'exhibits_table', locals: {exhibits: @sakes}

= link_to '出品したいかたはこちら', my_exhibits_path
= link_to 'サインアウト', signout_path, method: :delete
